datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Pizza {
  id              String   @id @default(uuid())
  size            String
  flavor          String
  customizations  String[] @default([])
  value           Float
  preparationTime Int
  orderId         String?
  order           Order?    @relation(fields: [orderId], references: [id])
}

model Order {
  id         String   @id @default(uuid())
  totalValue Float
  totalTime  Int
  pizzas     Pizza[]
  createdAt  DateTime @default(now())
}
